<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_partner_form_inherit_form" model="ir.ui.view">
        <field name="name">res.partner.form.inherit</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <!-- This field holds the same data than res.partner.vat so we made it onchange and invisible -->
            <field name="document_number" position="attributes">
                <attribute name="groups">base.group_no_one</attribute>
            </field>
            <field name="document_type_id" position="before">
                <field name="identification_type_is_rut" invisible="1" />
            </field>
            <field name="document_type_id" position="attributes">
                <attribute name="string">SII Document type</attribute>
                <attribute name="attrs">{'invisible': ['|', ('parent_id', '!=', False), ('identification_type_is_rut', '=', True)]}</attribute>
            </field>
        </field>
    </record>

</odoo>